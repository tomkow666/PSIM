<p id="notice"><%= notice %></p>

<h1>Listing Units</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Netto price</th>
      <th>Vat</th>
      <th>Is sold</th>
      <th>Sold at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.product_id %></td>
        <td><%= unit.netto_price %></td>
        <td><%= unit.vat %></td>
        <td><%= unit.is_sold %></td>
        <td><%= unit.sold_at %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

